{% extends 'front_layout.twig' %}

{% block title %}Support{% endblock %}

{% block content %}
    <h1>Support</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ support.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ support.name }}</td>
            </tr>
            <tr>
                <th>Constructor</th>
                <td>{{ support.constructor }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ support.year }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('support_index') }}" class="btn btn-dark">Back to list</a>

    <a href="{{ path('support_edit', {'id': support.id}) }}" class="btn btn-info">Edit</a>

    {{ include('support/_delete_form.html.twig') }}
{% endblock %}
