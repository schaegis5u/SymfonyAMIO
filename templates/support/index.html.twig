{% extends 'front_layout.twig' %}

{% block title %}Support index{% endblock %}

{% block content %}
    <h1>Support index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Constructor</th>
                <th>Year</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for support in supports %}
            <tr>
                <td>{{ support.id }}</td>
                <td>{{ support.name }}</td>
                <td>{{ support.constructor }}</td>
                <td>{{ support.year }}</td>
                <td>
                    <a href="{{ path('support_show', {'id': support.id}) }}" class="btn btn-dark">Show</a>
                    <a href="{{ path('support_edit', {'id': support.id}) }}" class="btn btn-info">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('support_new') }}" class="btn btn-secondary">Create new</a>
{% endblock %}
