{{ form_start(form) }} {# balise form #}

<div class="card">
    <div class="card-body">
        {% block formBody %}
            {{ form_widget(form) }} {# affiche les champs du form #}
        {% endblock %}
    </div>

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <button onclick="window.location.href='/game/'" class="btn btn-primary">Annuler</button>
    </div>
</div>

{{ form_end(form) }} {# fermeture balise form #}